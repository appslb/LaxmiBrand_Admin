<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_margin="10dp"
        app:cardElevation="2dp"
        android:id="@+id/productCard">
        <RelativeLayout
            android:id="@+id/productLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/cat1_1"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="20sp"
                android:textColor="@color/black"
android:layout_toRightOf="@id/productImage"
                android:layout_marginLeft="10dp"
               />
            <ImageView
                android:id="@+id/editIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_alignParentRight="true"
                android:outlineAmbientShadowColor="@color/primaryDarkColor"
                android:layout_marginLeft="20dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/productDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Description Product Description Product Description Product Description  Product Description Product Description Product Description"
                android:textSize="12sp"
                android:maxLines="3"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:layout_below="@id/productName"
                android:layout_toRightOf="@id/productImage"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/variantText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available In : 250 GM ,300 GM , 1 KG"
                android:textSize="12sp"
                android:maxLines="3"
                android:textColor="@color/red"
                android:layout_below="@id/productDescription"
                android:layout_toRightOf="@id/productImage"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/priceText"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Rs. 200 per KG,Rs. 200 per KG,Rs. 200 per KG,Rs. 200 per KG,Rs. 200 per KG,Rs. 200 per KGRs. 200 per KG,Rs. 200 per KG"
                android:textSize="12sp"
                android:maxLines="3"
                android:textColor="@color/titlebar_blue"
                android:layout_below="@id/variantText"
                android:layout_toRightOf="@id/productImage"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                />
            <ImageView
                android:id="@+id/showToUserIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_24"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>