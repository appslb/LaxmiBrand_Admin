    <style name="TextInputCatalogue" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">12dp</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="colorControlNormal">@color/primaryColor</item>
        <item name="colorControlActivated">@color/primaryColor</item>
    </style>

    <style name="TextLabelCatalogue" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <style name="MyMaterialTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/MyMaterialTheme.TabLayout.TextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="MyMaterialTheme.TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>
